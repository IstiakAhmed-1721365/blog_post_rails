
<h1>Post List</h1>

<ul>
  <% @posts.each do |f| %>
    <li>
      <a href="/posts/<%= f.id %>">
        <%= f.title %> | <%= link_to 'Update', edit_post_path(f) %> | <%= link_to 'Delete', f, method: :delete, data: { confirm: 'Are you sure?' } %>
      </a>
    </li>
  <% end %>
</ul>

<%= link_to "New Post", new_post_path %>